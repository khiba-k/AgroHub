generator client {
  provider = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["public", "auth"] 
}

model Farm {
  id              String   @id @default(uuid())
  name            String
  description     String
  district        String
  country         String
  contactNumber1  String
  contactNumber2  String?
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id])
  createdAt       DateTime @default(now())

  @@schema("public")
}

model User {
  id    String  @id
  farm  Farm?

  @@map("Users")     // match actual Supabase table name
  @@schema("auth")   // if your Users table is in the auth schema
}
